@page "/notes/{id:guid}"
@using AINotesApp.Features.Notes.GetNoteDetails
@using MediatR
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@attribute [Authorize]

@inject IMediator Mediator
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>@(note?.Title ?? "Note Details")</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading note...</p>
                </div>
            }
            else if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @errorMessage
                </div>
                <a href="/notes" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i> Back to Notes
                </a>
            }
            else if (note != null)
            {
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>@note.Title</h1>
                    <div class="btn-group" role="group">
                        <a href="/notes/@Id/edit" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a href="/notes" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(note.AiSummary))
                {
                    <div class="alert alert-info" role="alert">
                        <strong><i class="bi bi-stars"></i> AI Summary:</strong>
                        <p class="mb-0 mt-2">@note.AiSummary</p>
                    </div>
                }

                @if (!string.IsNullOrEmpty(note.Tags))
                {
                    <div class="mb-3">
                        <strong><i class="bi bi-tags-fill"></i> Tags:</strong>
                        <div class="mt-2">
                            @foreach (var tag in note.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries |
                                                StringSplitOptions.TrimEntries))
                            {
                                <span class="badge bg-primary me-1 mb-1">@tag</span>
                            }
                        </div>
                    </div>
                }

                <div class="card">
                    <div class="card-body">
                        <div class="note-content" style="white-space: pre-wrap;">@note.Content</div>
                    </div>
                    <div class="card-footer text-muted">
                        <div class="row">
                            <div class="col-md-6">
                                <small>
                                    <i class="bi bi-calendar-plus"></i> Created: @note.CreatedAt.ToLocalTime().ToString("g")
                                </small>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <small>
                                    <i class="bi bi-calendar-check"></i> Updated:
                                    @note.UpdatedAt.ToLocalTime().ToString("g")
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Related Notes Component -->
                <RelatedNotes NoteId="@Id" UserId="@userId" HasEmbedding="@(note != null)" TopN="5" />
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Guid Id { get; set; }

    private GetNoteDetailsResponse? note;
    private bool isLoading = true;
    private string? errorMessage;
    private string userId = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                userId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? string.Empty;
                await LoadNoteAsync();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading note: {ex.Message}";
            isLoading = false;
        }
    }

    private async Task LoadNoteAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            var query = new GetNoteDetailsQuery
            {
                Id = Id,
                UserId = userId
            };

            note = await Mediator.Send(query);

            if (note == null)
            {
                errorMessage = "Note not found or access denied.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading note: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}