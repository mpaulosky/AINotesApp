<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <!-- Official NuGet Gallery -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />

    <!-- GitHub Packages - Replace USERNAME with your GitHub username or organization -->
    <add key="github" value="https://nuget.pkg.github.com/mpaulosky/index.json" />
  </packageSources>

  <packageSourceMapping>
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>

  <packageSourceCredentials>
    <github>
      <!-- 
        For authentication, you need to add credentials:
        - username: Your GitHub username
        - password: Your GitHub Personal Access Token (PAT) with read:packages scope
        
        IMPORTANT: Don't commit credentials to source control!
        Use environment variables or add this section to your local nuget.config only.
      -->
      <add key="Username" value="%GITHUB_USERNAME%" />
      <add key="ClearTextPassword" value="%GITHUB_PASSWORD%" />
    </github>
  </packageSourceCredentials>
</configuration>
